<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.bits.buymed">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@mipmap/buymed_icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/buymed_icon"
            android:supportsRtl="true"
            android:theme="@style/Theme.BuyMed"
            tools:targetApi="31"
            android:networkSecurityConfig="@xml/network_security_config">

        <activity
                android:name=".SplashScreenActivity"
                android:exported="true"
                android:label="@string/app_name"
                android:theme="@style/Theme.BuyMed.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".SearchMedicines" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".CartScreen" />


    </application>

</manifest>